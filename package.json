{
  "name": "lrdb",
  "displayName": "lrdb",
  "description": "Lua Remote DeBugger",
  "version": "0.5.0",
  "publisher": "BeamNG",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Debuggers"
  ],
  "dependencies": {
    "@vscode/debugadapter": "^1.57.0",
    "lrdb-debuggable-lua": "^0.5.4",
    "tree-kill": "^1.2.2"
  },
  "activationEvents": [
    "onDebug",
    "onView:availableLuaDebuggers"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "build": "tsc",
    "jest": "jest",
    "test": "run-s build jest",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint . --cache --ext ts",
    "lint:prettier": "prettier . --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint . --cache --ext ts --fix",
    "fix:prettier": "prettier . --check --write"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.4",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vscode/debugadapter-testsupport": "^1.55.1",
    "@vscode/debugprotocol": "^1.55.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "vsce": "^2.7.0",
    "vscode-test": "^1.6.1"
  },
  "icon": "images/lrdb-icon.png",
  "license": "BSL-1.0",
  "contributes": {
    "breakpoints": [
      {
        "language": "lua"
      },
      {
        "language": "glua"
      }
    ],
    "debuggers": [
      {
        "type": "lrdb",
        "label": "Lua Remote DeBugger",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "languages": [
          "lua",
          "glua"
        ],
        "variables": {},
        "configurationSnippets": [
          {
            "label": "Lua: (lrdb) Launch",
            "description": "A new configuration for launching a Lua instance.",
            "body": {
              "type": "lrdb",
              "request": "launch",
              "name": "${2:Launch}",
              "program": "Lua executable (either a client or SRCDS executable).",
              "args": [],
              "cwd": "${workspaceFolder}",
              "sourceFileMap": {
                "${workspaceFolder}": "."
              }
            }
          },
          {
            "label": "Lua: (lrdb) attach",
            "description": "A new configuration for remotely debugging a Lua instance.",
            "body": {
              "type": "lrdb",
              "request": "attach",
              "name": "${1:Attach}",
              "host": "localhost",
              "port": 21111,
              "sourceFileMap": {
                "${workspaceFolder}": "."
              }
            }
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Lua executable (either a client or SRCDS executable).",
                "default": "${file}"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory (usually path where the executable is).",
                "default": "${workspaceFolder}"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments.",
                "default": []
              },
              "port": {
                "type": "number",
                "description": "Port to connect to.",
                "default": 21111
              },
              "sourceRoot": {
                "type": "string",
                "description": "Script source root directory (used in souce file matching at breakpoints).",
                "default": "${workspaceFolder}"
              },
              "sourceFileMap": {
                "type": "object",
                "description": "Optional source file mappings passed to the debug engine (relates a local path to a target path).",
                "default": {}
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          },
          "attach": {
            "required": [
              "sourceRoot"
            ],
            "properties": {
              "host": {
                "type": "string",
                "description": "Host name to connect to.",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Port to connect to.",
                "default": 21111
              },
              "sourceRoot": {
                "type": "string",
                "description": "Script source root directory (used in souce file matching at breakpoints).",
                "default": "${workspaceFolder}"
              },
              "sourceFileMap": {
                "type": "object",
                "description": "Optional source file mappings passed to the debug engine (relates a local path to a target path).",
                "default": {}
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              }
            }
          }
        }
      }
    ],
    "views": {
      "debug": [
        {
          "id": "availableLuaDebuggers",
          "name": "Lua Remote Debugger - VMs"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "availableLuaDebuggers",
        "contents": "No running Lua VM's found. Please start your Lua instance :)"
      }
    ],
    "commands": [
      {
          "command": "lrdb.refreshVMList",
          "title": "Refresh",
          "icon": "$(refresh)"
      },
      {
        "command": "lrdb.startDebugging",
        "title": "Start Debugging",
        "icon": "$(debug-alt)"
      },
      {
        "command": "lrdb.toggleDebugging",
        "title": "Toggle Debugging",
        "icon": "$(debug-alt)"
      }
    ],
    "menus": {
      "view/title": [
          {
              "command": "lrdb.refreshVMList",
              "when": "view == availableLuaDebuggers",
              "group": "navigation"
          }
      ]
    }
  }
}
