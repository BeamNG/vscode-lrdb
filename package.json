{
	"name": "lrdb",
	"displayName": "LRDB",
	"description": "Lua Remote DeBugger",
	"version": "0.0.1",
	"publisher": "lrdb",
	"engines": {
		"vscode": "^1.5.0"
	},
	"private": true,
	"categories": [
		"Debuggers"
	],
	"dependencies": {
		"vscode-debugprotocol": "^1.15.0",
		"vscode-debugadapter": "^1.15.0"
	},
	"activationEvents": [
		"onCommand:extension.lrdb.getProgramName",
		"onCommand:extension.lrdb.getDefaultDebugServerName",
		"onCommand:extension.lrdb.provideInitialConfigurations"
	],
	"main": "./out/src/extension",
	"contributes": {
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "lua",
				"label": "Lua Debug",
				"program": "./out/src/lrdbDebug.js",
				"runtime": "node",
				"variables": {
					"CurrentSource": "extension.lrdb.getProgramName",
					"DefaultLuaInterpreter": "extension.lrdb.getDefaultDebugServerName"
				},
				"configurationSnippets": [
					{
						"label": "Lua Debug: Launch",
						"description": "A new configuration for launching a lua program",
						"body": {
							"type": "lua",
							"request": "launch",
							"name": "${2:Launch Program}",
							"program": "^\"\\${workspaceRoot}/${1:Program}\""
						}
					},
					{
						"label": "Lua Debug: Attach",
						"description": "A new configuration for attaching a LRDB embeded program",
						"body": {
							"type": "lua",
							"request": "attach",
							"name": "${2:Launch Program}",
							"program": "^\"\\${workspaceRoot}/${1:Program}\""
						}
					}
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"host": {
								"type": "string",
								"description": "Connect host name.",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "connection port.",
								"default": 21110
							},
							"sourceRoot": {
								"type": "string",
								"description": "script source root directory.",
								"default": "${workspaceRoot}"
							},
							"startupCommand": {
								"type": "object",
								"description": "Debugging server.",
								"default": {
									"program": "${command.DefaultLuaInterpreter}",
									"args": [
										"--port",
										"21110",
										"${command.CurrentSource}"
									],
									"cwd": {
										"type": "string",
										"description": "Absolute path to working directory.",
										"default": "${workspaceRoot}"
									}
								}
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					},
					"attach": {
						"required": [
							"host",
							"port"
						],
						"properties": {
							"host": {
								"type": "string",
								"description": "host name.",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "port",
								"default": 21110
							},
							"sourceRoot": {
								"type": "string",
								"description": "script source root directory.",
								"default": "${workspaceRoot}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": "extension.lrdb.provideInitialConfigurations"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.0.3",
		"vscode": "^1.0.0",
		"vscode-debugadapter-testsupport": "^1.15.0",
		"mocha": "^2.3.3",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32"
	}
}